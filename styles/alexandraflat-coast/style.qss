/*
 * Alexandra Video Library
 * Flat (Coast) Qt Stylesheet
 * Based on alexandraflat-coastSheet theme by Colin Duquesnoy
 */

/* Main settings */
QMenuBar,
QToolBar,
QStatusBar,
QWidget {
  background: transparent;
  border: 0;
  color: #22455c;
  outline: none;
}

QMainWindow,
QDialog {
  background-color: #fff6e5;
}

QToolTip {
  background-color: white;
  opacity: 230;
  padding: 2px;
  border: 0;
  color: #22455c;
}

QSizeGrip {
  image: url(:/alexandraflat-coast/rc/sizegrip.png);
  width: 12px;
  height: 12px;
}

/* Tab widget */
QTabWidget::pane {
  background-color: #fbf2df;
  border: 1px solid #efdbb8;
  padding: 3px;
}

QTabBar::tab:top {
  background-color: #fbf2df;
  padding: 5px;
}

QTabBar::tab:top:selected {
  background-color: #87cac3;
  color: white;
}

QTabBar::tab:top:!selected:hover {
  background-color: #4797cc;
}

/* Tool bar */
QToolBar::handle:horizontal {
  image: url(:/alexandraflat-coast/rc/Hmovetoolbar.png);
}

QToolBar::handle:vertical {
  image: url(:/alexandraflat-coast/rc/Vmovetoolbar.png);
}

QToolBar::separator:horizontal {
  image: url(:/alexandraflat-coast/rc/Hsepartoolbar.png);
}

QToolBar::separator:vertical {
  image: url(:/alexandraflat-coast/rc/Vsepartoolbars.png);
}

QToolButton {
  padding: 3px;
}

QToolButton:hover {
  background-color: #4797cc;
  color: white;
}

QToolButton:checked,
QToolButton:pressed {
  border: 1px solid #f9edd5;
}

QToolButton:disabled {
  color: lightgrey;
}

/* Tables */
QTableView, QListView {
  background-color: #fff6e5;
  alternate-background-color: #f2f5f2;
}

QTableView::item:selected:active,
QListView::item:selected:active,
QWidget:item:selected {
  background-color: #87cac3;
  color: white;
}

QHeaderView::section {
  background-color: #a1d8d2;
  border: 1px solid #f9edd5;
  padding: 3px 1px;
  color: white;
}

QHeaderView::section::horizontal::first,
QHeaderView::section::horizontal::only-one {
  border-left: 1px solid #f9edd5;
}

QHeaderView::section::horizontal {
  border-left: transparent;
}

QHeaderView::section:checked { /* ? */
  background-color: #5A5959;
  color: white;
}

/* Menu bar */
QMenuBar::item {
  background: transparent;
}

QMenuBar::item:selected {
  background-color: #4797cc;
}

/* Menu */
QMenu {
  background-color: #fff6e5;
  color: #22455c;
}

QMenu::icon {
  margin: 5px;
}

QMenu::item {
  padding: 3px 5px 3px 26px;
}

QMenu::item:selected {
  background-color: #4797cc;
  color: white;
}

QMenu::item:disabled {
  color: lightgrey;
}

QMenu::separator {
  height: 1px;
  background-color: #d1e2d2;
  margin: 3px 10px;
}

QMenu::indicator {
  margin: 1px 0 0 4px;
  width: 16px;
  height: 16px;
}

/* Check box in menu */
QMenu::indicator:non-exclusive:unchecked {
  image: url(:/alexandraflat-coast/rc/checkbox_unchecked.png);
}

QMenu::indicator:non-exclusive:unchecked:selected {
  image: url(:/alexandraflat-coast/rc/checkbox_unchecked_disabled.png);
}

QMenu::indicator:non-exclusive:checked {
  image: url(:/alexandraflat-coast/rc/checkbox_checked.png);
}

QMenu::indicator:non-exclusive:checked:selected {
  image: url(:/alexandraflat-coast/rc/checkbox_checked_disabled.png);
}

/* Buttons */
QPushButton {
  min-width: 45px;
  background-color: #87cac3;
  padding: 5px 8px;
  color: #22455c;
}

QPushButton:hover,
QPushButton:checked:hover,
QComboBox:hover {
  background-color: #83d2ca;
}

QPushButton:focus,
QPushButton:checked,
QComboBox:focus {
  background-color: #7fb4ae;
}

QPushButton:disabled {
  color: lightgrey;
}

/* Edits */
QLineEdit,
QPlainTextEdit {
  background-color: #f3e5ce;
  padding: 4px;
}

QLineEdit:focus,
QPlainTextEdit:focus {
  border: 1px solid #87cac3;
}

QComboBox {
  background-color: #87cac3;
  selection-background-color: #4797cc;
  padding: 3px 2px 3px 8px;
  min-width: 75px;
}

QComboBox:disabled,
QAbstractSpinBox:disabled {
  background-color: #efdbb8;
  color: lightgrey;
}

QComboBox::drop-down {
  subcontrol-origin: padding;
  subcontrol-position: top right;
  width: 15px;
  border-left: 0;
}

QComboBox::down-arrow {
  image: url(:/alexandraflat-coast/rc/down_arrow.png);
}

QComboBox:on {
  background-color: #fff6e5;
  selection-background-color: #4797cc;
  padding-top: 3px;
  padding-left: 4px;
}

QAbstractSpinBox {
  min-width: 75px;
  background-color: #87cac3;
  padding-top: 2px;
  padding-bottom: 2px;
}

QAbstractSpinBox:up-button {
  background-color: transparent;
  subcontrol-origin: border;
  subcontrol-position: center right;
}

QAbstractSpinBox:down-button {
  background-color: transparent;
  subcontrol-origin: border;
  subcontrol-position: center left;
}

QAbstractSpinBox::up-arrow {
  image: url(:/alexandraflat-coast/rc/up_arrow.png);
  width: 10px;
  height: 10px;
}

QAbstractSpinBox::up-arrow:disabled,
QAbstractSpinBox::up-arrow:off {
  image: url(:/alexandraflat-coast/rc/up_arrow_disabled.png);
  width: 10px;
  height: 10px;
}

QAbstractSpinBox::down-arrow {
  image: url(:/alexandraflat-coast/rc/down_arrow.png);
  width: 10px;
  height: 10px;
}

QAbstractSpinBox::down-arrow:disabled,
QAbstractSpinBox::down-arrow:off {
  image: url(:/alexandraflat-coast/rc/down_arrow_disabled.png);
  width: 10px;
  height: 10px;
}

/* Group box */
QGroupBox {
  border: 1px solid #efdbb8;
  margin-top: 10px;
  margin-bottom: 10px;
}

QGroupBox::title {
  subcontrol-origin: margin;
  subcontrol-position: top center;
  padding-left: 10px;
  padding-right: 10px;
  padding-bottom: 15px;
}

/* Check box */
QCheckBox {
  spacing: 5px;
  outline: none;
  margin-bottom: 2px;
}

QCheckBox:disabled,
QLabel:disabled {
  color: lightgrey;
}

QCheckBox::indicator,
QGroupBox::indicator {
  width: 18px;
  height: 18px;
}

QGroupBox::indicator {
  margin-left: 2px;
}

QCheckBox::indicator:unchecked,
QCheckBox::indicator:unchecked:hover,
QGroupBox::indicator:unchecked,
QGroupBox::indicator:unchecked:hover {
  image: url(:/alexandraflat-coast/rc/checkbox_unchecked.png);
}

QCheckBox::indicator:unchecked:focus,
QCheckBox::indicator:unchecked:pressed,
QGroupBox::indicator:unchecked:focus,
QGroupBox::indicator:unchecked:pressed {
  border: none;
  image: url(:/alexandraflat-coast/rc/checkbox_unchecked_focus.png);
}

QCheckBox::indicator:checked,
QCheckBox::indicator:checked:hover,
QGroupBox::indicator:checked,
QGroupBox::indicator:checked:hover {
  image: url(:/alexandraflat-coast/rc/checkbox_checked.png);
}

QCheckBox::indicator:checked:focus,
QCheckBox::indicator:checked:pressed,
QGroupBox::indicator:checked:focus,
QGroupBox::indicator:checked:pressed {
  border: none;
  image: url(:/alexandraflat-coast/rc/checkbox_checked_focus.png);
}

QCheckBox::indicator:indeterminate,
QCheckBox::indicator:indeterminate:hover,
QCheckBox::indicator:indeterminate:pressed
QGroupBox::indicator:indeterminate,
QGroupBox::indicator:indeterminate:hover,
QGroupBox::indicator:indeterminate:pressed {
  image: url(:/alexandraflat-coast/rc/checkbox_indeterminate.png);
}

QCheckBox::indicator:indeterminate:focus,
QGroupBox::indicator:indeterminate:focus {
  image: url(:/alexandraflat-coast/rc/checkbox_indeterminate_focus.png);
}

QCheckBox::indicator:checked:disabled,
QGroupBox::indicator:checked:disabled {
  image: url(:/alexandraflat-coast/rc/checkbox_checked_disabled.png);
}

QCheckBox::indicator:unchecked:disabled,
QGroupBox::indicator:unchecked:disabled {
  image: url(:/alexandraflat-coast/rc/checkbox_unchecked_disabled.png);
}

QRadioButton {
  spacing: 5px;
  outline: none;
  margin-bottom: 2px;
}

QRadioButton::indicator {
  width: 21px;
  height: 21px;
}

QRadioButton::indicator:unchecked,
QRadioButton::indicator:unchecked:hover {
  image: url(:/alexandraflat-coast/rc/radio_unchecked.png);
}

QRadioButton::indicator:unchecked:focus,
QRadioButton::indicator:unchecked:pressed {
  border: none;
  outline: none;
  image: url(:/alexandraflat-coast/rc/radio_unchecked_focus.png);
}

QRadioButton::indicator:checked,
QRadioButton::indicator:checked:hover {
  border: none;
  outline: none;
  image: url(:/alexandraflat-coast/rc/radio_checked.png);
}

QRadioButton::indicator:checked:focus,
QRadioButton::indicato::menu-arrowr:checked:pressed {
  border: none;
  outline: none;
  image: url(:/alexandraflat-coast/rc/radio_checked_focus.png);
}

QRadioButton::indicator:indeterminate,
QRadioButton::indicator:indeterminate:hover,
QRadioButton::indicator:indeterminate:pressed {
  image: url(:/alexandraflat-coast/rc/radio_indeterminate.png);
}

QRadioButton::indicator:checked:disabled {
  outline: none;
  image: url(:/alexandraflat-coast/rc/radio_checked_disabled.png);
}

QRadioButton::indicator:unchecked:disabled {
  image: url(:/alexandraflat-coast/rc/radio_unchecked_disabled.png);
}

/* scroll bars */
QScrollBar:horizontal {
  height: 15px;
  margin: 3px 15px 3px 15px;
  border: 1px transparent #f3e5ce;
  background-color: #f3e5ce;
}

QScrollBar::handle:horizontal {
  background-color: #d1e2d2;
  min-width: 5px;
}

QScrollBar::add-line:horizontal {
  margin: 0px 3px 0px 3px;
  border-image: url(:/alexandraflat-coast/rc/right_arrow_disabled.png);
  width: 10px;
  height: 10px;
  subcontrol-position: right;
  subcontrol-origin: margin;
}

QScrollBar::sub-line:horizontal {
  margin: 0px 3px 0px 3px;
  border-image: url(:/alexandraflat-coast/rc/left_arrow_disabled.png);
  height: 10px;
  width: 10px;
  subcontrol-position: left;
  subcontrol-origin: margin;
}

QScrollBar::add-line:horizontal:hover,
QScrollBar::add-line:horizontal:on {
  border-image: url(:/alexandraflat-coast/rc/right_arrow.png);
  height: 10px;
  width: 10px;
  subcontrol-position: right;
  subcontrol-origin: margin;
}

QScrollBar::sub-line:horizontal:hover,
QScrollBar::sub-line:horizontal:on {
  border-image: url(:/alexandraflat-coast/rc/left_arrow.png);
  height: 10px;
  width: 10px;
  subcontrol-position: left;
  subcontrol-origin: margin;
}

QScrollBar::up-arrow:horizontal,
QScrollBar::down-arrow:horizontal {
  background: none;
}

QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal {
  background: none;
}

QScrollBar:vertical {
  background-color: #f3e5ce;
  width: 15px;
  margin: 15px 3px 15px 3px;
  border: 1px transparent #f3e5ce;
}

QScrollBar::handle:vertical {
  background-color: #d1e2d2;
  min-height: 5px;
}

QScrollBar::sub-line:vertical {
  margin: 3px 0px 3px 0px;
  border-image: url(:/alexandraflat-coast/rc/up_arrow_disabled.png);
  height: 10px;
  width: 10px;
  subcontrol-position: top;
  subcontrol-origin: margin;
}

QScrollBar::add-line:vertical {
  margin: 3px 0px 3px 0px;
  border-image: url(:/alexandraflat-coast/rc/down_arrow_disabled.png);
  height: 10px;
  width: 10px;
  subcontrol-position: bottom;
  subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical:hover,
QScrollBar::sub-line:vertical:on {
  border-image: url(:/alexandraflat-coast/rc/up_arrow.png);
  height: 10px;
  width: 10px;
  subcontrol-position: top;
  subcontrol-origin: margin;
}

QScrollBar::add-line:vertical:hover,
QScrollBar::add-line:vertical:on {
  border-image: url(:/alexandraflat-coast/rc/down_arrow.png);
  height: 10px;
  width: 10px;
  subcontrol-position: bottom;
  subcontrol-origin: margin;
}

QScrollBar::up-arrow:vertical,
QScrollBar::down-arrow:vertical {
  background: none;
}

QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
  background: none;
}

/* Lines */
QFrame[height="3"],
QFrame[width="3"] {
  background-color: #d1e2d2;
}

